<% include ../partials/header %>
<div class="container">
  <div class="row">
    <!-- <div class="col-md-3">
      <p class="lead">StackOverflow</p>
      <div class="list-group">
        <div class="list-group-item active">Item 1</div>
        <div class="list-group-item">Item 2</div>
        <div class="list-group-item">Item 3</div>
      </div>
    </div> -->
    <div class="col-12">
      <div class="card">
        <!-- <img class = "img-responsive" src = "<%= question.image %>"> -->
        <div class="caption">
          <!-- <h4 class = "float-right">
						$<%= question.price %>/night
					</h4> -->
          <h3>
            <a href="#" style="text-transform: capitalize"
              ><%= question.name %></a
            >
          </h3>
          <p><%= question.description %></p>
          <p>
            <em
              >Submitted by:
              <a href="/users/<%= question.author.id %>"
                ><%= question.author.username %>, <%=
                moment(question.createdAt).fromNow() %></a
              ></em
            >
          </p>
          <% if(currentUser && question.author.username == currentUser.username ||
          currentUser && currentUser.points>30){ %>
          <a
            class="btn btn-warning btn-sm"
            href="/question/<%= question._id %>/edit"
          >
            Edit
          </a>
          <form
            class="deleteform"
            action="/question/<%= question._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
          <% } %>
          <form
            action="/question/<%= question._id %>"
            style="float: right"
            method="POST"
          >
            <span><%=question.likes.length%></span>
            <button class="btn btn-secondary btn-sm">Vote</button>
          </form>
          <!-- <i class="fa fa-thumbs-up" style="float: right"></i> -->
        </div>
      </div>
      <br />
      <div class="card bg-light">
        <div class="card-header">
          <div class="text-right">
            <a
              class="btn btn-success"
              href="/question/<%= question._id %>/comments/new"
              >Add an answer</a
            >
          </div>
        </div>
        <% question.comments.forEach(function(comment){ %>
        <div class="row">
          <div class="col-lg-12">
            <strong><%= comment.author.username %></strong>
            <span class="float-right"
              ><%= moment(comment.createdAt).fromNow() %></span
            >
            <p><%= comment.text %></p>
            <% if(currentUser && comment.author.username === currentUser.username ||
            currentUser && currentUser.isAdmin){ %>
            <form
              action="/question/<%= question._id %>/comments/<%= comment._id %>?_method=DELETE"
              method="POST"
              class="deleteform"
            >
              <input
                type="submit"
                class="btn btn-sm btn-danger float-right"
                value="Delete"
              />
            </form>
            <a
              class="btn btn-sm btn-warning float-right"
              href="/question/<%= question._id %>/comments/<%= comment._id %>/edit"
              >Edit</a
            >
            <% } %>
            <form
              action="/question/<%= question._id %>/comments/<%= comment._id %>"
              style="float: right"
              method="POST"
            >
              <span><%=comment.likes.length%></span>
              <button class="btn btn-secondary btn-sm">Vote</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
