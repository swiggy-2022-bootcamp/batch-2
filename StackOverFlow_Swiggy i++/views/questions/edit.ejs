<% include ../partials/header %>
<div class="container">
  <div>
    <h1 style="text-align: center">EDIT <%= question.name %></h1>
    <div style="width: 30%; margin: 25px auto">
      <form
        action="/question/<%= question._id %>?_method=PUT"
        method="post"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= question.name %>"
            name="question[name]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= question.description %>"
            name="question[description]"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/question">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
